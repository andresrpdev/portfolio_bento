---
import { getLangFromUrl, useTranslations } from '../i18n/utils';
import { ui } from '../i18n/ui';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

// Acceder directamente al array de skills en ui
const skills = ui[lang].skills;
---

<!-- Importar DevIcon CSS -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/gh/devicons/devicon@latest/devicon.min.css">

<div class="flex flex-col gap-4">
  
  
  {skills.map((category) => (
    <div>
      <h4 class="text-xs font-medium text-indigo-400/80 mb-1">{category.category}</h4>
      <div class="grid grid-cols-3 gap-2">
        {category.items.map((skill) => (
          <div class="relative overflow-hidden group">
            <div class="absolute inset-0 bg-gradient-to-br from-violet-500/20 to-transparent opacity-0 group-hover:opacity-100 transition-all duration-300"></div>
            <div class="relative flex flex-col items-center gap-1 p-1.5 rounded-lg bg-neutral-800/50 border border-neutral-700/50 hover:border-indigo-500/30 transition-all duration-300">
              <i class={`${skill.icon} text-lg text-gray-400 group-hover:text-indigo-400 transition-colors duration-300`}></i>
              <span class="text-[10px] font-medium text-gray-500 group-hover:text-gray-300 transition-colors duration-300">{skill.name}</span>
            </div>
          </div>
        ))}
      </div>
    </div>
  ))}
</div>